@model IEnumerable<PawBuddy.Models.Animal>

<table class="table">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Espécie</th>
        <th>Gênero</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var animal in Model)
    {
        <tr>
            <td>@animal.Nome</td>
            <td>@animal.Especie</td>
            <td>@animal.Genero</td>
            <td>
                <a href="/Animais/Edit/@animal.Id">Editar</a> |
                <a href="/Animais/Delete/@animal.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>

