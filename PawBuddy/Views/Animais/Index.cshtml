@model IEnumerable<PawBuddy.Models.Animal>

@{
    ViewData["Title"] = "Index";
}
<div id="conteudo">
    @* S√≥ carrega a partial no fallback se o utilizador for admin *@
    @if (User.IsInRole("Admin"))
    {
        @await Html.PartialAsync("_IndexPartial", Model)
    }
</div>

<body>
<!-- T√≠tulo e introdu√ß√£o -->
<div class="text-center my-4">
    <h1 class="display-5 text-primary">üêæ Animais Dispon√≠veis para Ado√ß√£o</h1>
    <p class="lead">Conhe√ßa os nossos patudos que est√£o √† espera de um lar cheio de carinho!</p>
</div>

@* Bot√£o de criar novo animal - vis√≠vel apenas para administradores *@
@if (User.IsInRole("Admin"))
{
    <div class="text-end mb-4">
        <a class="btn btn-outline-secondary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Criar Novo Animal
        </a>
    </div>
}
@* Formul√°rio de filtros *@
<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-center">
        <div class="col-md-4">
            <input type="text" name="searchNome" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Pesquisar por nome...">
        </div>
        <div class="col-md-3">
            <select name="especie" class="form-select">
                <option value="">Todas as esp√©cies</option>
                <option value="C√£o">C√£o</option>
                <option value="Gato">Gato</option>
                @* Adiciona mais conforme necess√°rio *@
            </select>
        </div>
        <div class="col-md-3">
            <select name="genero" class="form-select">
                <option value="">Todos os g√©neros</option>
                <option value="Macho">Macho</option>
                <option value="F√™mea">F√™mea</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary w-100">
                <i class="bi bi-search"></i> Filtrar
            </button>
        </div>
    </div>
</form>

<!-- Lista de animais em cards responsivos -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.Imagem" class="card-img-top" alt="Imagem de @item.Nome" style="object-fit: cover; height: 250px;" />

                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title text-center w-100">@item.Nome</h5>

                        <div class="d-flex justify-content-center align-items-center gap-3 w-100">

                            <button type="button" class="btn btn-outline-primary btn-sm animal-popover"
                                    data-bs-toggle="popover"
                                    data-bs-html="true"
                                    data-bs-trigger="hover focus"
                                    data-bs-content="
                                        <strong>Ra√ßa:</strong> @item.Raca<br/>
                                        <strong>Idade:</strong> @item.Idade anos<br/>
                                        <strong>G√©nero:</strong> @item.Genero
                                    ">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-file-earmark-text"></i> Ver ficha completa
                        </a>
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-success" asp-controller="IntencaoDeAdocao" asp-action="Create" asp-route-id="@item.Id">
                                <i class="bi bi-house-heart-fill"></i> Adotar
                            </a>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</body>

@section Scripts {
    <script>
        var popoverTriggerList = [].slice.call(document.querySelectorAll('.animal-popover'));
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl);
        });
    </script>
}

