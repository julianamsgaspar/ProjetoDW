@model IEnumerable<PawBuddy.Models.IntencaoDeAdocao>

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-title">Lista de Intenções de Adoção</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Nova Intenção
    </a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title">@item.Animal?.Nome</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Estado</h6>

                    <p class="card-text">
                        <strong>Profissão:</strong> @item.Profissao<br />
                        <strong>Residência:</strong> @item.Residencia<br />
                        <strong>Motivo:</strong> @item.Motivo<br />
                        <strong>Tem Animais?</strong> @item.temAnimais<br />
                        @if (!string.IsNullOrEmpty(item.quaisAnimais))
                        {
                            <strong>Quais Animais:</strong> @item.quaisAnimais<br />
                        }
                        <strong>Data:</strong> @item.DataIA.ToShortDateString()<br />
                        <strong>Utilizador:</strong> @item.Utilizador?.Nome
                    </p>
                </div>
                <div class="card-footer text-end bg-transparent border-0">
                    <a class="btn btn-sm btn-outline-primary me-1" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square"></i> Editar
                    </a>
                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fa-solid fa-circle-info"></i> Detalhes
                    </a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fa-solid fa-trash"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>
    }
</div>
