@model PawBuddy.Models.IntencaoDeAdocao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Intenção De Adoção</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Profissao" class="control-label"></label>
                <input asp-for="Profissao" class="form-control" />
                <span asp-validation-for="Profissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Residencia" class="control-label"></label>
                <input asp-for="Residencia" class="form-control" />
                <span asp-validation-for="Residencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="temAnimais" class="control-label"></label>
                <select asp-for="temAnimais" class="form-control">
                    <option value=""> Sim </option>
                    <option value=""> Não </option>
                </select>
                <span asp-validation-for="temAnimais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quaisAnimais" class="control-label"></label>
                <input asp-for="quaisAnimais" class="form-control" />
                <span asp-validation-for="quaisAnimais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UtilizadorFK" class="control-label"></label>
                <select asp-for="UtilizadorFK" class ="form-control" asp-items="ViewBag.UtilizadorFK"></select>
            </div>
            <div class="form-group">
                <label asp-for="AnimalFK" class="control-label"></label>
                <select asp-for="AnimalFK" class ="form-control" asp-items="ViewBag.AnimalFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

